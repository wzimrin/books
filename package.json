{
    "devDependencies": {
        "nodemon": "^2.0.2",
        "parcel-bundler": "^1.12.4",
        "purescript": "^0.13.6",
        "purty": "^4.5.2",
        "spago": "^0.13.1"
    },
    "dependencies": {
        "express": "^4.17.3",
        "pg": "^7.17.1"
    },
    "scripts": {
        "build-server": "spago bundle-app --main Server.Main --to server.js",
        "run-server": "spago run --main Server.Main",
        "watch-build-server": "spago bundle-app --main Server.Main --to server.js -wl",
        "watch-run-server": "nodemon ./server.js",
        "build-client": "spago bundle-app --main Client.Main --to index.js",
        "watch-client": "spago bundle-app --main Cient.Main --to index.js"
    }
}
